include _mixins

mixin css(url)
	link(rel="stylesheet", href=`${url}.css`)
mixin js(url)
	script(src=`${url}.js`)

doctype html
html(lang="ja")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible", content="ie=edge")
		//- まだファビコンできてないからコメントアウト
		//- include _favicons
		block title
		+css("https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.0/normalize.min")
		+css("/css/bundle")
		link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.3.1/css/all.css', integrity='sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU', crossorigin='anonymous')
		block css
		block head
	body
		block body
		#page-top
			span.fas.fa-arrow-up
		footer#footer
			block footer
			hr
			p (C)2018-2019 Xeltica
			p: a(href="https://github.com/xeltica/xeltica-garage")
				img(src="https://img.shields.io/github/followers/xeltica.svg?label=%E3%83%95%E3%82%A9%E3%83%AD%E3%83%BC&style=social" alt="GitHub")
				| &emsp;
				a(href="https://app.netlify.com/sites/xeltica/deploys")
					img(src="https://api.netlify.com/api/v1/badges/b8980b34-a8b3-4312-9f1c-a642443cee7a/deploy-status" alt="Netlify")
		block script
		+js("js/main")